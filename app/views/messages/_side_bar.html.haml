.chat-side
  .chat-side__side-header
    .chat-side__side-header__box
      %p.chat-side__side-header__box__user-name
        = current_user.name
      %ul.chat-side__side-header__box__menu
        %li.list
          = link_to new_group_path do
            = icon('fas', 'pen-square', class: 'icon')     
        %li.list
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')
  .chat-side__groups
    - current_user.groups.each do |group|
      .group
        = link_to '#' do
          .group__name
            = group.name
          .group__message
